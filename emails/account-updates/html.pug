
extends ../layout

block content
  .container.mt-3
    .row
      .col-12
        .card.d-block.text-center
          h5.card-header= t('Account update')
          .card-body
            .card-text
              p= t('You have successfully updated your account with the following changes:')
              each field of accountUpdates
                if field.name === config.passport.fields.otpEnabled
                  p= t(`Two-factor authentication has been ${field.current ? 'enabled' : 'disabled'}.`)
                else
                  p= t(`${field.text} has changed from ${field.previous} to ${field.current}`)
          .card-footer: small.text-muted= t('If you did not update your account, then please reach out for support.')
