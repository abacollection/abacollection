.container
  .row
    .col-12
      .bg-light.border.rounded.p-3
        a(href=config.urls.web).d-inline-block
          img(src=manifest('img/logo-square.svg'), width=30, height=30, alt='').d-inline-block.align-middle
          = ' '
          != appNameImage
        .d-inline-block.float-right
          ul.list-inline
            li.list-inline-item
              a.btn.btn-md.btn-outline-success(title=t('My Account'), href=config.urls.web)
                != fa.png2x('user', '#28a745', 20, 20, [ [ 'class', 'd-inline-block align-middle' ] ])
                .d-inline-block.align-middle
                  = ' '
                  = 'My Account'
            li.list-inline-item
              a.btn.btn-md.btn-outline-success(title="GitHub", href=config.pkg.homepage)
                != fa.png2x('github', '#28a745', 20, 20, [ [ 'class', 'd-inline-block align-middle' ] ])
                .d-inline-block.align-middle
                  = ' '
                  = 'GitHub'
