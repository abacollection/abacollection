
extends ../../layout

append scripts
  script(defer, src=manifest('js/clients.js'), integrity=manifest('js/clients.js', 'integrity'), crossorigin='anonymous')

block body
  .container-fluid.py-3
    .row.mt-1
      .col
        include ../../_breadcrumbs
        if clients.length === 0
          .alert.alert-info= t('No clients exist yet')
        else
          .table-responsive
            table.table.table-hover.table-bordered
              thead.thead-dark
                tr
                  th(scope='col')= t('First Name')
                  th(scope='col')= t('Last Name')
                  th(scope='col')= t('Date of Birth')
                  th(scope='col')= t('Gender')
                  th(scope='col')
                    = t('Actions')
                    a#addClientBtn(type='button', data-toggle='tooltip', data-title=t('Add'), aria-label=t('Add Client')).btn.btn-success.btn-sm.float-right: i.fas.fa-plus
                tbody
                  tr#addForm(hidden)
                    form(action=l('/dashboard/clients'), method='POST', hidden).ajax-form
                      input(type='hidden', name='_method', value='PUT')
                      input(type='hidden', name='_csrf', value=ctx.csrf)
                      input(type='hidden', name='add_client', value='true')
                      td.align-middle
                        input#input-first-name(type='text', name='first_name', required, placeholder="First Name").form-control
                      td.align-middle
                        input#input-last-name(type='text', name='last_name', required, placeholder="Last Name").form-control
                      td.align-middle
                        input#input-dob(type='date', name='dob').form-control
                      td.align-middle
                        select#input-gender(name='gender').form-control
                          option(value='')= t('-- Select --')
                          option(value='Male')= t('Male')
                          option(value='Female')= t('Female')
                      td.align-middle
                        .btn-group(role='group', aria-label=t('Actions'))
                          button(type='submit').btn.btn-success: i.fa.fa-fw.fa-check
                          button#cancelAddBtn(type='button', aria-label=t('Cancel')).btn.btn-danger: i.fa.fa-fw.fa-times
                  each client in clients
                    tr(id=client.id)
                      td.align-middle= client.first_name
                      td.align-middle= client.last_name
                      td.align-middle= dayjs(client.dob).format('M/D/YY')
                      td.align-middle= client.gender
                      td.align-middle
                        .btn-group(role='group', aria-label=t('Actions'))
                          a.edit-btn(href='#', data-toggle='tooltip',  data-title=t('Edit')).btn.btn-secondary: i.fa.fa-fw.fa-edit
                          a(href=l(`/dashboard/clients/${client.id}/programs`), data-toggle='tooltip', data-title=t('Programs')).btn.btn-secondary: i.fa.fa-fw.fa-list
                          a(href=l(`/collection/${client.id}`), data-toggle='tooltip', data-title=t('Data Collection')).btn.btn-secondary: i.fa.fa-fw.fa-table
                          form.ajax-form.confirm-prompt.btn-group(action=l(`/dashboard/clients/${client.id}`), method="POST", autocomplete="off")
                            input(type='hidden', name='_csrf', value=ctx.csrf)
                            input(type='hidden', name='_method', value='DELETE')
                            button(type='submit', data-toggle='tooltip', data-title=t('Remove')).btn.btn-secondary: i.fa.fa-fw.fa-remove
                    tr.edit-form(id=`${client.id}-form`, hidden)
                      form(action=l(`/dashboard/clients/${client.id}`), method='POST').ajax-form.confirm-prompt
                        input(type='hidden', name='_csrf', value=ctx.csrf)
                        input(type='hidden', name='edit_client', value='true')
                        td.align-middle
                          input(type='text', name='first_name', required, value=client.first_name).form-control
                        td.align-middle
                          input(type='text', name='last_name', required, value=client.last_name).form-control
                        td.align-middle
                          input(type='date', name='dob', value=client.dob.toISOString().split('T')[0]).form-control
                        td.align-middle
                          select(name='gender').form-control
                            if client.gender === 'Male'
                              option(value='')= t('-- Select --')
                              option(value='Male' selected)= t('Male')
                              option(value='Female')= t('Female')
                            else if client.gender === 'Female'
                              option(value='')= t('-- Select --')
                              option(value='Male')= t('Male')
                              option(value='Female' selected)= t('Female')
                            else
                              option(value='')= t('-- Select --')
                              option(value='Male')= t('Male')
                              option(value='Female')= t('Female')
                        td.align-middle
                          .btn-group
                            button(type='submit').btn.btn-success: i.fa.fa-fw.fa-check
                            button.edit-cancel-btn(type='button', aria-label=t('Cancel')).btn.btn-danger: i.fa.fa-fw.fa-times
          include ../../_pagination
